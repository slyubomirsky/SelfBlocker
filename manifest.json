{
	"name": "Self-Blocker",
	"version": "1.0",
    "icons": {"16": "icon16.png",
              "48": "icon48.png",
              "128": "icon128.png"},
	"description": "Voluntarily Configure Sites to Block",
	"permissions": ["tabs", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"browser_action": {
	    "default_icon": "icon48.png",
	    "default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
	"manifest_version": 2
}